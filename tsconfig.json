
{ "compileOnSave": true,
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "jsx": "react-jsx",
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }